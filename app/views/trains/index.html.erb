<h1>List of trains</h1>

<%= link_to 'New railway station', new_train_path %>

<table>
  <tr>
    <th>Title</th>
    <th></th>
  </tr>

  <% @trains.each do |train| %>
      <tr>
        <td><%= train.tnumber %></td>
        <td><%= link_to 'Show', train_path(train) %></td>
        <td><%= link_to 'Edit', edit_train_path(train) %></td>
        <td><%= link_to 'Destroy', train_path(train), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>